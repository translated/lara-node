{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib/"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "lib_browser",
    "node_modules"
  ]
}
